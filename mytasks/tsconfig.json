{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "mytasks/src/config/babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "./node_modules/expo/tsconfig.base"
}
